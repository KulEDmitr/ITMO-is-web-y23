<section class="section gallery">
  <div class="inner">
    <div class="section__header" id="gallery">
      <h2 class="section__title">Посты</h2>
    </div>

    <div class="post__card">
      <a class="link nav__link" href="/posts/1">
        <div class="job__header">
          <h3 class="job__position">lalala</h3>
        </div>
      </a>
    </div>

    {{#each posts}}
      <div class="post__card">
        <a class="link nav__link" href="/posts/{{id}}">
