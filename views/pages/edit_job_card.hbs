<section class="section">
  <div class="container">
    <div class="inner" id="container">
      <div class="section__header">
        <h2 class="section__title">Редактирование места работы</h2>
      </div>

        <div class="row" id="loaded__item">
          <div class="edit__element">
            <a href="/jobs-list">
              <button type="button" class="card__button">Вернуться к списку</button>
            </a>

            <div class="card element__card" id="job_card">
              <div class="job__header">
                <h3 class="job__position" id="job__position"></h3>
              </div>

              <div class="job__place" id="job__place"></div>
              <div class="job__time">
                <span id="job__start_time"></span> -
                <span id="job__end_time"></span>
              </div>

              <div class="job__description" id="job__description"></div>
            </div>
          </div>

          <div class="edit__element" id="edit__form">
            <form class="form element__card">
              <div class="container">
                <div class="form__group form__item">
                  <label class="form__label" for="position"><b>Должность</b></label>
                  <input class="item__text" id="position" type="text" placeholder="position">
                </div>

                <div class="form__group form__item">
                  <label class="form__label" for="place"><b>Место работы</b></label>
                  <input class="item__text" id="place" type="text" placeholder="place">
                </div>

                <div class="form__group form__item">
                  <label class="form__label" for="endTime"><b>Дата завершения</b></label>
                  <input class="item__text" id="endTime" type="date">
                </div>

                <div class="form__group form__item">
                  <label class="form__label" for="description"><b>Описание</b></label>
                  <textarea class="item__text" id="description" placeholder="description"></textarea>
                </div>

                <div>
                  <button type="submit" class="card__button" id="add">Сохранить изменения</button>
                  <button type="button" class="card__button" id="reset">Отменить изменения</button>
                  <button type="button" class="card__button" id="delete">Удалить данные</button>
                </div>
              </div>
            </form>
          </div>

        </div>
    </div>
  </div>
</section>

<script src="/scripts/data_rendering/jobs/job_card_render.js"></script>